<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Quiz Demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    /* Custom styling */
    .question {
      margin-bottom: 20px;
    }
    .options div {
      margin-top: 10px;
    }
    #submitButton, #nextButton {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-5 mb-4 text-center">Quiz Demo</h1>

    <form action="/quiz" method="post">
    <div id="questionContainer">
      <% questions.forEach((question, index) => { %>
        <div class="question">
          <p><strong>Question <%= index + 1 %>:</strong> <%= question.question %></p>
          <div class="options">
            <% question.options.forEach((option, optionIndex) => { %>
              <div class="form-check">
                <input class="form-check-input" type="radio" id="option<%= index %><%= optionIndex %>" name="option<%= index %>" value="<%= optionIndex %>">
                <label class="form-check-label" for="option<%= index %><%= optionIndex %>"><%= option %></label>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
      <button id="submitButton" class="btn btn-primary" type="submit">Submit</button>
      <button id="nextButton" class="btn btn-primary" style="display: none;">Next</button>
    </div>
  </form>
    <p id="result" class="mt-4" style="display: none;"></p>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
